{
  "name": "starterkit",
  "version": "1.0.3",
  "description": "",
  "main": "index.js",
  "scripts": {
    "clean": "rimraf dist",
    "start": "npm run clean && npm run security && npm run build && npm run lint  &  npm run watch & npm run app && npm run serve",
    "poststart": "",
    "app": "node_modules/.bin/nodemon index",
    "security": "npm run nsp:check && npm run snyk:test",
    "nsp:check": "nsp check",
    "snyk:test": "snyk test",
    "lint": "onchange **/* ./* -- npm run standard",
    "standard": "node_modules/.bin/standard --cache --fix --verbose | snazzy ||true",
    "watch": "npm-run-all -p watch:**",
    "watch:html": "onchange \"views/**/*.pug\" -- npm run build:html",
    "watch:css": "onchange src/scss/**/*.scss -- npm run build:css",
    "watch:test": "onchange \"tests/**.js\" -- npm run test",
    "build": "npm run build:html && npm run build:css:dist && npm run build:css:src && npm run build:css:dist:min",
    "build:html": "node_modules/.bin/pug views/index.pug -o dist/",
    "build:css:dist": "node_modules/.bin/node-sass src/scss/*.scss | node buildScripts/purifycss | postcss -u postcss-font-magician -u postcss-cssnext --no-map  -o dist/public/css/style.css",
    "build:css:src": "node_modules/.bin/node-sass src/scss/*.scss | node buildScripts/purifycss | postcss -u postcss-font-magician -u postcss-cssnext --no-map  -o src/public/css/style.css",
    "build:css:dist:min": "cat dist/public/css/style.css | postcss -u cssnano -o dist/public/css/style.min.css --map",
    "serve": "node_modules/.bin/nodemon buildScripts/browser-sync",
    "test": "node_modules/.bin/mocha tests/**/*.js || true"
  },
  "keywords": [],
  "author": "Anthony <anthony.turrigiano@gmail.com>",
  "license": "ISC",
  "devDependencies": {
    "browser-sync": "^2.18.8",
    "chai": "^3.5.0",
    "chalk": "^1.1.3",
    "cssnano-cli": "^1.0.5",
    "dotenv": "^4.0.0",
    "express": "^4.14.1",
    "localtunnel": "^1.8.2",
    "mocha": "^3.2.0",
    "node-sass": "^4.5.0",
    "nodemon": "^1.11.0",
    "npm-run-all": "^4.0.1",
    "nsp": "^2.6.2",
    "onchange": "^3.2.1",
    "open": "0.0.5",
    "postcss-cssnext": "^2.9.0",
    "postcss-font-magician": "^1.6.0",
    "pug": "^2.0.0-beta11",
    "pug-cli": "^1.0.0-alpha6",
    "rimraf": "^2.6.0",
    "snazzy": "^6.0.0",
    "snyk": "^1.25.0",
    "standard": "^8.6.0",
    "supertest": "^3.0.0"
  },
  "dependencies": {
    "express": "^4.14.1"
  }
}
